@model IEnumerable<WMS.Models.CustomerModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý Khách hàng";
}

<style>
    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        color: #6c757d;
        text-transform: uppercase;
        vertical-align: middle;
    }

    .table td {
        vertical-align: middle;
    }

    .card {
        border: none;
        border-radius: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h2 fw-bold mb-1"><i class="fa-solid fa-users me-2"></i>Quản lý Khách hàng</h1>
        <p class="text-muted mb-0">Xem, tạo mới và quản lý thông tin khách hàng.</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fa-solid fa-plus me-2"></i>Thêm Khách hàng
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-light border-0 p-3">
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-0 pt-1"><i class="fa-solid fa-list me-2"></i>Danh sách Khách hàng</h5>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="🔍 Tìm kiếm theo tên, SĐT, email..." />
                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Tên Khách Hàng</th>
                        <th>Địa Chỉ</th>
                        <th>Số Điện Thoại</th>
                        <th>Email</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold ps-3">@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa khách hàng này không?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="fa fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                <div class="text-center p-5">
                                    <i class="fa-solid fa-folder-open fa-3x text-muted mb-3"></i>
                                    <h5 class="fw-bold">Chưa có khách hàng nào</h5>
                                    <p class="text-muted">Hãy bắt đầu bằng cách thêm khách hàng đầu tiên của bạn.</p>
                                    <a asp-action="Create" class="btn btn-primary mt-2">
                                        <i class="fa fa-plus"></i> Thêm Khách hàng
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>