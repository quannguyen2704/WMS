@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Thêm vai trò mới";
}

<style>
    /* Tùy chỉnh nhỏ để icon trong ô input trông đều hơn */
    .input-group-text {
        width: 42px;
        justify-content: center;
    }

    .card {
        border: none;
        border-radius: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h2 fw-bold mb-1"><i class="fa-solid fa-shield-plus me-2"></i>Thêm Vai Trò Mới</h1>
        <p class="text-muted mb-0">Tạo một vai trò mới để phân quyền cho người dùng trong hệ thống.</p>
    </div>
</div>

<div class="card shadow-sm">
    <form asp-action="Create" asp-controller="Role" method="post">
        @Html.AntiForgeryToken()

        <div class="card-header bg-light border-0 pt-3">
            <h5 class="mb-0"><i class="fa-solid fa-id-badge me-2"></i>Thông tin vai trò</h5>
        </div>

        <div class="card-body p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên vai trò</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-shield-halved"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Ví dụ: Admin, WarehouseStaff, Manager..." />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 text-end py-3">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save me-2"></i>Lưu vai trò
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}