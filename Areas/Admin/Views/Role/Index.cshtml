@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Quản lý Vai trò";
}

<style>
    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        color: #6c757d;
        text-transform: uppercase;
        vertical-align: middle;
    }

    .table td {
        vertical-align: middle;
    }

    .card {
        border: none;
        border-radius: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h2 fw-bold mb-1"><i class="fa-solid fa-shield-halved me-2"></i>Quản lý Vai trò & Phân quyền</h1>
        <p class="text-muted mb-0">Tạo mới, chỉnh sửa và quản lý các vai trò trong hệ thống.</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fa-solid fa-plus me-2"></i>Thêm Vai trò
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-light border-0 p-3">
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-0 pt-1"><i class="fa-solid fa-list me-2"></i>Danh sách Vai trò</h5>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="🔍 Tìm kiếm theo tên vai trò..." />
                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Tên Vai Trò</th>
                        <th>ID</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold ps-3">@item.Name</td>
                                <td class="text-muted small">@item.Id</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa vai trò này không?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="fa fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                <div class="text-center p-5">
                                    <i class="fa-solid fa-folder-open fa-3x text-muted mb-3"></i>
                                    <h5 class="fw-bold">Chưa có vai trò nào</h5>
                                    <p class="text-muted">Hãy bắt đầu bằng cách tạo vai trò đầu tiên cho hệ thống của bạn.</p>
                                    <a asp-action="Create" class="btn btn-primary mt-2">
                                        <i class="fa fa-plus"></i> Thêm Vai trò
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>