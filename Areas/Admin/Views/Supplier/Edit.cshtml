@model WMS.Models.SupplierModel
@* Giả sử namespace của bạn là WMS.Models, hãy thay đổi nếu cần *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Giữ nguyên layout chung
    ViewData["Title"] = "Cập nhật Nhà cung cấp";
}

<style>
    /* CSS đồng bộ với Create.cshtml */
    .input-group-text {
        width: 42px;
        justify-content: center;
    }

    .card {
        border: none;
        border-radius: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h2 fw-bold mb-1"><i class="fa-solid fa-pencil-alt me-2"></i>Cập Nhật Nhà Cung Cấp</h1>
        <p class="text-muted mb-0">Chỉnh sửa thông tin chi tiết của đối tác **@Model.Name**.</p>
    </div>
</div>

<div class="card shadow-sm">
    <form asp-controller="Supplier" asp-action="Edit" method="post">

        @* Token chống tấn công CSRF *@
        @Html.AntiForgeryToken()

        @* Thêm input ẩn cho ID để biết đang chỉnh sửa nhà cung cấp nào *@
        <input type="hidden" asp-for="Id" />

        <div class="card-header bg-light border-0 pt-3">
            <h5 class="mb-0"><i class="fa-solid fa-address-card me-2"></i>Thông tin nhà cung cấp</h5>
        </div>

        <div class="card-body p-4">

            @* Hiển thị lỗi tổng hợp nếu có *@
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên nhà cung cấp</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-building"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Ví dụ: Công ty TNHH ABC" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-map-location-dot"></i></span>
                            <input asp-for="Address" class="form-control" placeholder="Ví dụ: 123 Nguyễn Văn Linh, Q.7, TP.HCM" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            <input asp-for="Phone" class="form-control" placeholder="Ví dụ: 0909123456" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Ví dụ: lienhe@congtyabc.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 text-end py-3">
            <a asp-action="Index" asp-controller="Supplier" class="btn btn-secondary me-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}