@model WMS.Models.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Thêm người dùng mới";
}

<style>
    .input-group-text {
        width: 42px;
        justify-content: center;
    }

    .card {
        border: none;
        border-radius: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h2 fw-bold mb-1">
            <i class="fa-solid fa-user-plus me-2"></i>Thêm Người Dùng Mới
        </h1>
        <p class="text-muted mb-0">Tạo một tài khoản mới để truy cập vào hệ thống.</p>
    </div>
</div>

<div class="card shadow-sm">
    <form asp-controller="User" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="card-header bg-light border-0 pt-3">
            <h5 class="mb-0">
                <i class="fa-solid fa-id-card me-2"></i>Thông tin tài khoản
            </h5>
        </div>

        <div class="card-body p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <div class="row">
                <div class="col-md-8 mx-auto">

                    <!-- Họ và tên -->
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-id-card"></i>
                            </span>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên..." />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-phone"></i>
                            </span>
                            <input asp-for="Phone" class="form-control" placeholder="VD: 09xxxxxxxx / 03xxxxxxxx" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email (Tên đăng nhập)</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Ví dụ: admin@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-key"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 text-end py-3">
            <a asp-action="Index" asp-controller="User" class="btn btn-secondary me-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save me-2"></i>Lưu tài khoản
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
