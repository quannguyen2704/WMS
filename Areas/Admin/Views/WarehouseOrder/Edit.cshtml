@model WMS.Models.OrderModel
@{
    ViewData["Title"] = "Cập nhật đơn hàng kho";
}

<div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <div>
        <h1 class="h4 fw-bold text-primary mb-1">
            <i class="fa-solid fa-pen-to-square me-2"></i> Cập nhật Đơn Hàng Kho
        </h1>
        <p class="text-muted mb-0">Xem thông tin chi tiết và cập nhật trạng thái xử lý trong kho.</p>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-light">
        <h5 class="fw-bold text-primary mb-0">
            <i class="fa-solid fa-file-invoice me-2"></i> Thông tin đơn hàng
        </h5>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <!-- ======== Dòng 1 ======== -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-barcode text-primary me-1"></i> Mã đơn hàng
                    </label>
                    <input asp-for="OrderNumber" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-box-open text-primary me-1"></i> Sản phẩm
                    </label>
                    <input value="@Model.Product?.ProductName" class="form-control" readonly />
                </div>
            </div>

            <!-- ======== Dòng 2 ======== -->
            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-layer-group text-primary me-1"></i> Số lượng
                    </label>
                    <input asp-for="Quantity" class="form-control" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-cubes text-primary me-1"></i> Đơn vị
                    </label>
                    <input asp-for="Unit" class="form-control" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-money-bill text-primary me-1"></i> Đơn giá (VNĐ)
                    </label>
                    <input value="@Model.UnitPrice.ToString("N0")" class="form-control" readonly />
                </div>
            </div>

            <!-- ======== Dòng 3 ======== -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-user text-primary me-1"></i> Khách hàng
                    </label>
                    <input value="@Model.Customer?.Name" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-calendar text-primary me-1"></i> Ngày đặt
                    </label>
                    <input value="@Model.OrderDate.ToString("dd/MM/yyyy")" class="form-control" readonly />
                </div>
            </div>

            <!-- ======== Dòng 4: Phương thức thanh toán + Tổng tiền ======== -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-credit-card text-primary me-1"></i> Phương thức thanh toán
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            @if (Model.PaymentMethod == WMS.Models.PaymentMethod.COD)
                            {
                                <i class="fa-solid fa-hand-holding-dollar text-secondary"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-mobile-screen-button text-danger"></i>
                            }
                        </span>
                        <input class="form-control fw-semibold"
                               value="@(Model.PaymentMethod == WMS.Models.PaymentMethod.COD ? "Thanh toán khi nhận hàng (COD)" : "Chuyển khoản qua Momo")"
                               readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fa-solid fa-sack-dollar text-primary me-1"></i> Thành tiền (VNĐ)
                    </label>
                    <input value="@((Model.Quantity * Model.UnitPrice).ToString("N0"))" class="form-control fw-bold text-success" readonly />
                </div>
            </div>

            <!-- ======== Dòng 5: Trạng thái kho ======== -->
            <div class="mb-4">
                <label class="form-label fw-bold">
                    <i class="fa-solid fa-warehouse text-primary me-1"></i> Trạng thái kho
                </label>
                <select asp-for="WarehouseStatus" class="form-select"
                        asp-items="@(new SelectList(ViewBag.StatusList, "Value", "Text"))">
                </select>
            </div>

            <!-- ======== Nút hành động ======== -->
            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-save me-1"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .form-label i {
            width: 18px;
            text-align: center;
        }

        .card {
            border-radius: 0.75rem;
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
        }

        select.form-select {
            cursor: pointer;
        }
    </style>
}
