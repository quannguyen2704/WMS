         style="position: relative;
                background: url('https://images.unsplash.com/photo-1494412519320-aa613dfb7738?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1740') center/cover no-repeat;
                color: #fff;
                padding: 6rem 0;
                text-align: center;
                overflow: hidden;">

    <!-- Lớp phủ mờ xanh đậm -->
    <div style="position: absolute; inset: 0; background: rgba(0, 32, 96, 0.6); backdrop-filter: blur(3px); z-index: 1;"></div>

    <div class="container" style="position: relative; z-index: 2;">
        <h2 class="mb-4" style="font-weight: 700; text-shadow: 0 3px 8px rgba(0,0,0,0.4);">
            Sẵn sàng Chuyển đổi Doanh nghiệp của bạn?
        </h2>
        <p class="lead mb-4" style="max-width: 800px; margin: 0 auto 2rem; color: rgba(255,255,255,0.9); text-shadow: 0 2px 5px rgba(0,0,0,0.4);">
            Tham gia cùng hàng trăm doanh nghiệp đã tin tưởng và thành công với giải pháp của chúng tôi.
        </p>
        <a asp-area="" asp-controller="Account" asp-action="Login"
           class="btn btn-light btn-lg"
           style="border-radius: 50px; font-weight: 600; padding: 0.8rem 2.5rem; transition: all 0.3s ease;">
            Bắt đầu Ngay hôm nay
        </a>
    </div>
</section>
